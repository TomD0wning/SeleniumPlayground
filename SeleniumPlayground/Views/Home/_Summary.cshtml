@model Restaurant

<section>
    <h3>@Model.Name</h3>
    <div>
        Cuisine: @Model.Cuisine | Rating: @Model.Rating
    </div>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id">More</a>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Remove" asp-route-id="@Model.Id">Remove</a>
    </div>
</section>